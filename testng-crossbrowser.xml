<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="CrossBrowserSuite" parallel="tests" thread-count="3">

    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="alerts.AlertTests"/>
            <class name="addRemoveElements.AddRemoveElemTest"/>
            <class name="basicAuth.BasicAuthTest"/>
            <class name="brokenImages.BrokenImagesTest"/>
            <class name="challengingDOM.ChallengingDOMTest"/>
        </classes>
    </test>

    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="alerts.AlertTests"/>
            <class name="addRemoveElements.AddRemoveElemTest"/>
            <class name="basicAuth.BasicAuthTest"/>
            <class name="brokenImages.BrokenImagesTest"/>
            <class name="challengingDOM.ChallengingDOMTest"/>
        </classes>
    </test>

    <test name="EdgeTests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="alerts.AlertTests"/>
            <class name="addRemoveElements.AddRemoveElemTest"/>
            <class name="basicAuth.BasicAuthTest"/>
            <class name="brokenImages.BrokenImagesTest"/>
            <class name="challengingDOM.ChallengingDOMTest"/>
        </classes>
    </test>

</suite>
